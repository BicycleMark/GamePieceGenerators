{
  "name": "Chess Pieces Generator",
  "version": "1.0.0",
  "description": "A tool for creating customizable chess pieces for games, UI elements, or other creative projects.",
  "author": "GamePieceGenerators Team",
  "license": "MIT",
  "features": [
    "Generate SVG and PNG chess pieces",
    "Customize colors, effects, and dimensions",
    "Support for all standard chess pieces (pawn, rook, knight, bishop, queen, king)",
    "Customizable board square colors",
    "Export individual pieces or complete sets",
    "Save and load your settings",
    "Real-time preview of changes"
  ],
  "pieceTypes": [
    "pawn",
    "rook",
    "knight",
    "bishop",
    "queen",
    "king"
  ],
  "colorSets": [
    {
      "name": "Classic",
      "white": "#FFFFFF",
      "black": "#000000",
      "lightSquare": "#F0D9B5",
      "darkSquare": "#B58863"
    },
    {
      "name": "Modern",
      "white": "#E8E8E8",
      "black": "#202020",
      "lightSquare": "#EEEED2",
      "darkSquare": "#769656"
    },
    {
      "name": "Tournament",
      "white": "#FFFAFA",
      "black": "#1A1110",
      "lightSquare": "#FFCE9E",
      "darkSquare": "#D18B47"
    },
    {
      "name": "Colorful",
      "white": "#E6BC5C",
      "black": "#7C4C3E",
      "lightSquare": "#ECECD7",
      "darkSquare": "#7389A9"
    }
  ],
  "styleOptions": [
    "classic",
    "modern",
    "minimalist"
  ],
  "defaultSettings": {
    "board": {
      "lightSquareColor": "#F0D9B5",
      "darkSquareColor": "#B58863",
      "size": 8,
      "squareSize": 60
    },
    "pieces": {
      "whiteColor": "#FFFFFF",
      "whiteBorderColor": "#CCCCCC",
      "blackColor": "#000000",
      "blackBorderColor": "#333333",
      "size": 50,
      "borderWidth": 2,
      "is3D": true,
      "style": "classic"
    },
    "effects": {
      "glowEnabled": false,
      "glowSize": 5,
      "glowColor": "#4A90E2",
      "shadowEnabled": true,
      "shadowBlur": 5,
      "shadowColor": "rgba(0, 0, 0, 0.5)"
    }
  }
}
